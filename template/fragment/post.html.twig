<div class="post-upvote" data-post-id={{ post.id() }}>
    <span class="post-upvote-wrapper">
        <a class="post-upvote-link" href="/login"><i class="fa fa-caret-up"></i></a>
    </span>
    <span class="post-vote-count-wrapper {{ post.voteCount() ? "tooltip" : "" }}" title="Upvoted by {{ post.getUpvotersCsv() }}">
        <span class="post-vote-count">{{ post.voteCount() }}</span>
    </span>
</div>

<div class="post-info">
    <a href="{{ post.getUrl() }}">{{ post.getSubject() }}</a>
    <span class="last-updated">{{ post.createdAtFriendly() }}</span>

    {% if not hideTags %}
    <div class="tags">
        {% for tag in post.fetchTags() %}
            <span class="tag">
            <i class="fa fa-tag"></i>
            <a href="{{ tag.getUrl() }}">{{ tag.getTagText() }}</a>
        </span>
        {% endfor %}
    </div>
    {% endif %}
</div>

{%  if post.getUser() and post.getUser().imageUrl() %}
    <div class="user-info">
        <div class="image-wrapper  {{ post.isNews() ? "is-news" : "" }} user-thumbnail">
            <a href="{{ post.getUser().getUrl() }}"><img class="lazyload" data-src="{{ post.getUser().imageUrl() }}" ></a>
            {% if post.isNews() %}
                <i class="fa fa-newspaper-o"></i>
            {% endif %}
        </div>
    </div>
{% endif %}
